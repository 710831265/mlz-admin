{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "plugins": [
      {"transform": "typescript-transform-paths"}
    ]
  },
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "tests",
    "**/__test__",
    "docs/**/*.tsx"
  ]
}
